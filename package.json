{
  "name": "@ultimateshadsform/universal-media",
  "displayName": "Get Media Info from OS using native bindings for Node.js",
  "version": "0.0.2-alpha.5",
  "author": "SHADXW",
  "keywords": [
    "media",
    "media-info",
    "media-metadata",
    "media-info-node",
    "windows-media"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ultimateshadsform/universal-media.git"
  },
  "homepage": "https://github.com/ultimateshadsform/universal-media",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "universal-media",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-pc-windows-msvc"
      ]
    },
    "directory": "npm"
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^22.9.0",
    "ava": "^6.0.1",
    "bun-types": "^1.1.34"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:debug": "napi build --platform",
    "test": "ava",
    "universal": "napi universal",
    "version": "napi version"
  },
  "optionalDependencies": {
    "@ultimateshadsform/universal-media-win32-x64-msvc": "0.0.2-alpha.5"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "npm/**/*.node"
  ]
}
